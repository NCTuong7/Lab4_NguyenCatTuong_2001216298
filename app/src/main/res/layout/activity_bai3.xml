<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bai3">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:background="#4CAF50"
        android:text="Quản lý nhân viên" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMaNV3a"
                android:layout_width="80dp"
                android:layout_height="wrap_content"


                android:text="Mã NV:" />

            <EditText
                android:id="@+id/edtMaNV3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:text="Tên NV" />

            <EditText
                android:id="@+id/edtTenNV3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Giới tính:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radNu3a"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Nữ" />

                    <RadioButton
                        android:id="@+id/radNam3a"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Nam" />

                </RadioGroup>

                <Button
                    android:id="@+id/btnNhapNV3a"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#808080"
                    android:text="Nhâp NV"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:gravity="center"
                android:text="Danh sách nhân viên"
                android:textColor="@color/white"
                android:textSize="10pt" />

            <ImageButton
                android:id="@+id/imbX"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/dau_x" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lvDsNhanVien"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>